	url = ../avr-libcpp
[submodule "dependencies/googletest/googletest"]
	path = dependencies/googletest/googletest
	url = ../googletest

# CMake toolchains
[submodule "toolchains/toolchain-arm-none-eabi-gcc"]
	path = toolchains/toolchain-arm-none-eabi-gcc
	url = ../toolchain-arm-none-eabi-gcc
[submodule "toolchains/toolchain-avr-gcc"]
	path = toolchains/toolchain-avr-gcc
	url = ../toolchain-avr-gcc

# DFPs
[submodule "dfps/dfp-microchip-atmega"]
	path = dfps/dfp-microchip-atmega
	url = ../dfp-microchip-atmega

# tools
[submodule "tools/lizard"]
	path = tools/lizard
	url = ../lizard
